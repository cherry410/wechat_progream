page{
  height: 100%;
}
.container{
  height: 100%;
}
.splash{
  width: 100%;
  height: 100%;
  position: relative;
}
.splash swiper-item{
 flex: 1;
}
 
.splash swiper-item image{
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
} 
 .skip_index{
  position: absolute;
  bottom: 200rpx;
  left: 50%;
  margin-left: -150rpx;
  width: 300rpx;
  background-color: rgba(64, 88, 109, .4);
  color: #fff;
  border: 1rpx solid rgba(64, 88, 109, .8);
  border-radius: 200rpx;
  font-size: 40rpx;
} 